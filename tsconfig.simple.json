  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "server/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}